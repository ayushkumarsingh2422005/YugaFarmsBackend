{
  "kind": "collectionType",
  "collectionName": "transactions",
  "info": {
    "singularName": "transaction",
    "pluralName": "transactions",
    "displayName": "Transaction"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "order": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::order.order"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "amount": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "INR"
    },
    "paymentMethod": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "COD",
        "RAZORPAY"
      ]
    },
    "transaction_status": {
      "type": "enumeration",
      "default": "PENDING",
      "enum": [
        "PENDING",
        "SUCCESS",
        "FAILED",
        "REFUNDED"
      ]
    },
    "razorpayOrderId": {
      "type": "string"
    },
    "razorpayPaymentId": {
      "type": "string"
    },
    "razorpaySignature": {
      "type": "string"
    },
    "gatewayResponse": {
      "type": "json"
    }
  }
}
